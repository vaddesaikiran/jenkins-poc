pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                // Jenkins will pull repo - replace URL later
                git url: 'YOUR_GITHUB_REPO_URL'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'pytest -v'
            }
        }
    }
}
